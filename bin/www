    streamUrl: 'rtsp://192.168.1.53/live1.sdp',
    wsPort: 9999
});
*/


/**
 * Listen i2c and sockets
 */

var Logs = require('./logs.js');
var io = require('socket.io')(server);

var connectionsArray = [];

var charts = require('./charts.js');


function getRandomInt(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
}

io.sockets.on('connection', function (socket) {
    console.log("Number of connections: " + connectionsArray.length);
    var ID = (socket.id).toString();
    var time = (new Date).toLocaleTimeString();
    socket.emit('system', {'event': 'connected', 'name': ID, 'time': time});
    socket.broadcast.emit('system', {'event': 'userJoined', 'name': ID, 'time': time});

    socket.on('system', function (msg) {
        var time = (new Date).toLocaleTimeString();
        socket.emit('system', {'event': 'messageSent', 'name': ID, 'text': msg, 'time': time});
        socket.broadcast.emit('system', {'event': 'messageReceived', 'name': ID, 'text': msg, 'time': time})
    });
    if (!connectionsArray.length) {
        var curr='';
        var log_getter = setTimeout(function getter(){
            var tmp_obj = Logs.getLogs();
            if(curr != tmp_obj){
                io.sockets.emit('send', tmp_obj);
                curr = tmp_obj;
            }

            console.log("Get logs: " + tmp_obj);
            setTimeout(getter, 5000);
        }, 1);
        //log_getter.unref();
    }


    socket.on("daily_logs", function(){
        var daily = Logs.dailyLogs();
        console.log("DAILY: "+daily);
        socket.emit("daily_scale", daily);
    });

  /*  socket.on("sensors", function(){
        //setImmediate(function(){
            console.log("___________________ EMIT SENSORS ______________________");
